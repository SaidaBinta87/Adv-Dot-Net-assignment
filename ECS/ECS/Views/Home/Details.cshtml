@model ECS.EF.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<h1>Ordered By:@Model.User.username </h1>
<h2>Order Date: @Model.Date</h2>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Item Total</th>
    </tr>
    @foreach (var od in Model.OrderItems)
    {
        <tr>
            <td>@od.Product.Pname</td>
            <td>@od.Subtotal</td>
            <td>@od.Quantity</td>
            <td>@(od.Quantity * od.Subtotal)</td>
        </tr>
    }
    <tr>
        <th colspan="3">Total</th>
        <th>@Model.Amount</th>
    </tr>
    <tr>
        <td>
        </td>
        <td></td>
        <td></td>
        <td>
            <a href="/Home/Process/@Model.orderID" class="btn btn-success">Process</a>
            <a href="/Home/Cancel/@Model.orderID" class="btn btn-danger">Cancel</a>
        </td>
    </tr>
</table>